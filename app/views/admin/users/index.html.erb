<h2>
  Users
  <div class="small">Created as users log in through Google</div>
</h2>

<table class="table table-hover" id="admin-users">
  <thead>
    <tr>
      <th>Name</th>
      <th width="1%"></th>
      <th width="1%"></th>
    </tr>
  </thead>
  <tbody>
    <% User.unscope( :where ).all.each do |u| %>
      <tr rel="<%= u.id %>">
        <td>
          <%= u.full_name %>
          <div class="user-email"><%= u.email %></div>
        </td>
        <td>
          <a class="btn admin btn-<% if u.admin? %>success<% else %>danger<% end %>"
            href="<%= admin_user_url( u ) %>?type=admin"
            data-method="patch"
            data-confirm-pop="Change user's admin status?"
            data-confirm-btn="Yes change it!">Admin</a>
        </td>
        <td>
          <a class="btn allow_access btn-<% if u.allow_access? %>success<% else %>danger<% end %>"
            href="<%= admin_user_url( u ) %>"
            data-method="delete"
            data-confirm-pop="Really change user's access?"
            data-confirm-btn="Yes change it!">Allow access</a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
