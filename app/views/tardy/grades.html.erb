<a class="btn btn-success" href="/" id="home">Home</a>
<h3>Student Tardy Sign In Log</h3>
<h3>Select grade</h3>
<div id="grades">
  <% @grades.each do |grade| %>
    <a class="btn btn-primary" href="/tardy/<%= grade %>"><%= grade %></a>
  <% end %>
</div>

<% content_for :css do %>
  <style>
    #grades {
      display: grid;
      grid-gap: 30px;
      grid-template-columns: repeat( 4, 1fr );
      grid-template-rows: repeat( 6, 1fr );
      grid-auto-flow: row;
      height: 100vh;
      width: 100%;
    }
    #grades a {
      font-size: 4em;
      white-space: normal;
    }
  </style>
<% end %>
