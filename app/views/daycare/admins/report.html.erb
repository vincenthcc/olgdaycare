<h2>Daycare report</h2>

<%= form_tag report_daycare_admin_url do %>
  <div class="row">
    <div class="form-group col-md-3">
      <label for="start_date" class="control-label">Start date</label>
      <input class="form-control" type="date" id="start_date" name="start_date" value="<%= params[:start_date] %>" />
    </div>

    <div class="form-group col-md-3">
      <label for="end_date" class="control-label">End date</label>
      <input class="form-control" type="date" id="end_date" name="end_date" value="<%= params[:end_date] %>" />
    </div>

    <div class="col-md-3">
      <label>&nbsp;</label><br />
      <button type="submit" class="btn btn-primary">Refresh</button>
    </div>
  </div>
<% end %>


<table class="table table-sm table-hover">
  <thead>
    <tr>
      <th>Student</th>
      <th>Grade</th>
      <th>Date</th>
      <th>Checked in</th>
      <th>Checked out</th>
      <th>Total hours</th>
      <th>Checked out by</th>
    </tr>
  </thead>
  <tbody>
    <% @entries.each do |entry| %>
      <tr <% if entry.checkout_time.present? %>class="table-warning"<% end %>>
        <td><%= entry.student.list_name %></td>
        <td><%= entry.student.grade %></td>
        <td><%= entry.checkin_date %></td>
        <td><%= entry.checkin_time_display %></td>
        <td><%= entry.checkout_time_display if entry.checkout_time.present? %></td>
        <td><%= entry.total_time %></td>
        <td><%= entry.checked_out_by %></td>
      </tr>
    <% end %>
  </tbody>
</table>
